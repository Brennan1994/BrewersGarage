<UserControl x:Class="BrewersGarage.View.GrainOutputsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BrewersGarage.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" Grid.Row="3" Grid.Column="2" Margin="20" >
            <TextBlock  FontSize="16" Text="Outputs" />
            <TextBlock  Text="Strike Water Volume (gal)" />
            <TextBox  IsEnabled="False" Text="{Binding Path = StrikeWaterVol, Mode=OneWay}" />
            <TextBlock  FontSize="12" Text="Strike Water Temp (degrees F)" />
            <TextBox  IsEnabled="False" Text="{Binding Path = StrikeTemp, Mode=OneWay}" />
            <TextBlock  Text="Sparge Water Volume (gal)"/>
            <TextBox   IsEnabled="False" Text="{Binding Path = SpargeVol, Mode=OneWay}" />
        </StackPanel>
    </Grid>
</UserControl>
